{
    "name": "mahjong_solitaire",
    "description": "Mahjong solitaire game, with two players mode (turn based).",
    "version": "1.3.0",
    "devDependencies": {
        "@types/createjs": "0.0.29",
        "@types/jquery": "^3.3.29",
        "body-parser": "^1.18.3",
        "express": "^4.16.4",
        "glob": "^7.1.3",
        "grunt": "~1.0.3",
        "grunt-contrib-clean": "~2.0.0",
        "grunt-contrib-copy": "~1.0.0",
        "grunt-contrib-cssmin": "~3.0.0",
        "grunt-processhtml": "~0.4.2",
        "http-server": "^0.11.1",
        "npm-run-all": "^4.1.5",
        "terser": "~3.14.1",
        "typescript": "^3.3.1"
    },
    "scripts": {
        "dev": "npm-run-all --parallel dev:*",
        "dev:game:watch": "tsc -w",
        "dev:game:server": "http-server -p 8000 --silent",
        "dev:map_editor:watch": "tsc -w --project ./map_editor/",
        "dev:map_editor:server": "node map_editor/server.js",
        "build": "grunt"
    }
}
